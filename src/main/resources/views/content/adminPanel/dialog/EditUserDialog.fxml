                   AnchorPane.leftAnchor="150.0"/>
        <JFXButton layoutX="473.0" layoutY="440.0" onAction="#cancelButtonOnAction" prefHeight="25.0" prefWidth="170.0"
                   style="-fx-background-color: #3C58Fa;" text="Anuluj" textFill="#a0a2ab"
                   AnchorPane.rightAnchor="153.0"/>
        <Label fx:id="responseLabel" alignment="CENTER" layoutX="50.0" layoutY="498.0" AnchorPane.bottomAnchor="73.0"

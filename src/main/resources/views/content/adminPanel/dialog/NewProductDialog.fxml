<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane stylesheets="@../../../../styles/DialogStyle.css" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.app.controllers.content.adminPanel.dialog.NewProductDialogController">
    <children>
        <JFXTextField fx:id="productTextField" layoutX="223.0" layoutY="96.0" prefHeight="25.0" prefWidth="155.0"
                      promptText="Nazwa produktu" style="-jfx-label-float: true;" AnchorPane.leftAnchor="223.0"
                      AnchorPane.rightAnchor="223.0"/>
        <JFXComboBox fx:id="categoriesComboBox" layoutX="223.0" layoutY="162.0" prefHeight="25.0" prefWidth="155.0"
                     promptText="Kategoria produktu" style="-jfx-label-float: true;" AnchorPane.leftAnchor="223.0"
                     AnchorPane.rightAnchor="223.0"/>
        <JFXComboBox fx:id="unitComboBox" layoutX="223.0" layoutY="225.0" prefHeight="25.0" prefWidth="155.0"
                     promptText="Jednostka" style="-jfx-label-float: true;" AnchorPane.leftAnchor="223.0"
                     AnchorPane.rightAnchor="223.0"/>
        <JFXButton buttonType="RAISED" layoutX="66.0" layoutY="275.0" onAction="#addProductOnAction" prefWidth="150.0"
                   style="-fx-background-color: #3C58Fa;" text="Dodaj" textFill="WHITE" AnchorPane.leftAnchor="100.0"
                   AnchorPane.topAnchor="325.0">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </JFXButton>
        <JFXButton buttonType="RAISED" layoutX="330.0" layoutY="275.0" onAction="#cancelButtonOnAction"
                   prefWidth="150.0" style="-fx-background-color: #3C58Fa;" text="Anuluj" textFill="WHITE"
                   AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="325.0"/>
        <Label alignment="CENTER" layoutX="182.0" layoutY="25.0" text="Dodawanie nowego produktu"
               AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="25.0">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label fx:id="responseLabel" alignment="CENTER" layoutX="307.0" layoutY="277.0" textFill="#f80000"
               AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0"/>
    </children>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</AnchorPane>

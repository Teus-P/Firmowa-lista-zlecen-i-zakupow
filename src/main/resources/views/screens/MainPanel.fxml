<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.app.controllers.pages.MainPageController">
   <left>
      <VBox stylesheets="@../../styles/menuBarStyle.css" BorderPane.alignment="CENTER">
         <children>
            <Pane id="menuHeader" prefHeight="106.0" prefWidth="200.0">
               <children>
                  <Text fill="WHITE" layoutX="25.0" layoutY="59.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Firmowa lista zleceń">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Text>
               </children>
            </Pane>
            <JFXButton fx:id="homeButton" buttonType="RAISED" onAction="#homeButtonOnAction" prefHeight="50.0" prefWidth="200.0" styleClass="menuButton" text="Strona główna">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </JFXButton>
            <JFXButton fx:id="orderButton" buttonType="RAISED" onAction="#orderButtonOnAction" prefHeight="50.0" prefWidth="200.0" styleClass="menuButton" text="Złóż zamówienie">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </JFXButton>
            <JFXButton fx:id="currentOrdersButton" onAction="#currentOrdersButtonOnAction" prefHeight="50.0" prefWidth="200.0" styleClass="menuButton" text="Aktualne zamówienia" />

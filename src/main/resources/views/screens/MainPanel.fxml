            <JFXButton fx:id="profileButton" onAction="#profileButtonOnAction" prefHeight="50.0" prefWidth="200.0" styleClass="menuButton" text="Dane osobowe" />
            <JFXButton fx:id="helpButton" onAction="#helpButtonOnAction" prefHeight="50.0" prefWidth="200.0" styleClass="menuButton" text="Pomoc" />
            <JFXButton fx:id="adminButton" onAction="#adminButtonOnAction" prefHeight="50.0" prefWidth="200.0" styleClass="menuButton" text="Panel administratora">
               <VBox.margin>
                  <Insets top="300.0" />
               </VBox.margin>
            </JFXButton>
            <JFXButton fx:id="logoutButton" onAction="#logoutButtonOnAction" prefHeight="50.0" prefWidth="200.0" styleClass="menuButton" text="Wyloguj" />
         </children>
      </VBox>
   </left>
   <center>
      <Pane fx:id="containerPane" prefHeight="1080.0" prefWidth="1720.0" BorderPane.alignment="CENTER" />
